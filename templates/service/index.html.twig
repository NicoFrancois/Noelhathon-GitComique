{% extends 'layout.html.twig' %}

{% block title %}Tous les services{% endblock %}

{% block body %}
    <div class="container">
    <div class="row justify-content-between">
    <h1 class="mb-5">Tous les services</h1>
    <a href="{{ path('service_new') }}">Create new</a>
    </div>
        <table class="table mt-5">
            <thead class="thead-dark">
            <tr class="text-center">
                <th scope="col">Nom de l'evenement</th>
                <th scope="col">Type d'evenement</th>
                <th scope="col">Voir toutes les editions</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
            <tr class="text-center">
                <td>{{ service.title }}</td>
                <td>{{ service.type }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}"><i class="far fa-eye"></i></a>
                </td>
                <td><a href="{{ path('service_edit', {'id': service.id}) }}">edit</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
