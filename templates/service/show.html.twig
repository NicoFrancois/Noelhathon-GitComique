{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
        <a class="col-3" href="{{ path('service_index') }}"><i class="fas fa-chevron-left mr-3"></i>Retour a la liste</a>
         <h1 class="col-xs-12 col-md-7 mt-5 text-center">{{ service.title }}</h1>
        </div>
        <a class="mt-5 mb-5" href="{{ path('edition_service_index') }}"><button type="button" class="btn bg-primary mt-5 text-white">Voir les differentes editions</button></a>

        <h3 class="mt-5">Description du service :</h3>
        <p>{{ service.description }}</p>
        <h2 class="text-center mt-5 mb-5">Evolution du nombre de participant de ce service :</h2>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
        <canvas id="myChart" class="mb-5" width="400" height="200"></canvas>
        <script>
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [{% for annee in annees %}{{ annee }},{% endfor %}],
                    datasets: [{
                        label: 'Nb participants',
                        data: [{% for participant in participants %}{{ participant }},{% endfor %}],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        fill:false,
                        borderWidth: 6,
                        borderColor: ['red'],
                    }]
                },
                options: {
                }
            });
        </script>
    </div>
{% endblock %}
