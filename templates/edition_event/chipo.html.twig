{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <table class="table container">
        <thead class="thead-light">
        <tr>
            <th scope="col">Liste Start'Up</th>
            <th scope="col">Avez-vous appréciez cet événement ?</th>
            <th scope="col">Quelles améliorations suggéreriez-vous ?</th>
            <th scope="col">Cet événement vous a-t'il permis d'élargir votre réseau ?</th>
            <th scope="col">Combien de contact avez-vous pu établir lors de cet événement ?
            <th scope="col">Comment avez-vous connu l'existence de cet événement ?</th>
            <th scope="col">Commentaire</th>
        </tr>
        </thead>
        <tbody>
        {% for edition in edition_events %}
        {% for startup in edition.satisfactions %}
        <tr>
            <th>{{ startup.society.nomEntreprise }}</th>
            <td>{{ startup.satisfactionRatio }}</td>
            <td>{{ startup.amelioration }}</td>
            <td>{{ startup.eventElarge }}</td>
            <td>{{ startup.contact }}</td>
            <td>{{ startup.existance }}</td>
            <td>{{ startup.comment }}</td>
        </tr>
        {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
