{% extends 'base.html.twig' %}

{% block title %}Start Up{% endblock %}

{% block body %}

    <section class="container">
        <h1>{{ start_up.nomEntreprise }}</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Nom du dirigeant</th>
                <td>{{ start_up.nomDirigeant }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ start_up.adresse }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ start_up.fondationDate ? start_up.fondationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Numéro de SIRET</th>
                <td>{{ start_up.siretNumber }}</td>
            </tr>
            <tr>
                <th>Effectif</th>
                <td>{{ start_up.workerNumber }}</td>
            </tr>
            <tr>
                <th>Activité</th>
                <td>{{ start_up.activity }}</td>
            </tr>
            <tr>
                <th>Propriété intellectuelle</th>
                <td>{{ start_up.intellectualProperty }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ start_up.email }}</td>
            </tr>
            </tbody>
        </table>



        <a href="{{ path('start_up_index') }}">Retour à la liste</a>

        <a href="{{ path('start_up_edit', {'id': start_up.id}) }}">Modifier</a>

        {{ include('start_up/_delete_form.html.twig') }}

        <h2> Services</h2>

        {% for service in service %}
            <h3>{{ service.title }}</h3>
        {% endfor %}

        <h2> Évenements</h2>

        {% for event in events %}
            <h3>{{ event.title }}</h3>
        {% endfor %}
    </section>

{% endblock %}
