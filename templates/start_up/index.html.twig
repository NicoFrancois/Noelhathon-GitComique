{% extends 'base.html.twig' %}

{% block title %}Liste Start-Up{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-between">
        <h1 class="mb-5">Liste des start-Up</h1>
        <a href="{{ path('start_up_new') }}"><button type="button" class="btn bg-primary mt-5 text-white">Ajouter une nouvelle start-Up</button></a>
    </div>

    <table class="table mt-5">
        <thead class="thead bg-primary">
        <tr class="text-center">
                <th class="text-white">Nom de l'entreprise</th>
                <th class="text-white">Numéro de téléphone</th>
                <th class="text-white">Email</th>
                <th class="text-white">Voir en détail</th>
                <th class="text-white">Modifier</th>
                <th class="text-white">Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for start_up in start_ups %}
            <tr class="text-center">
                <td>{{ start_up.nomEntreprise }}</td>
                <td>{{ start_up.phoneNumber }}</td>
                <td>{{ start_up.email }}</td>
                <td>
                    <a href="{{ path('start_up_show', {'id': start_up.id}) }}"><i class="fas fa-eye"></i></a>
                </td>
                <td><a href="{{ path('start_up_edit', {'id': start_up.id}) }}"><i class="fas fa-edit"></i></a></td>
                <td>{{ include('start_up/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('start_up_new') }}">Créer une nouvelle start-up</a>
{% endblock %}
